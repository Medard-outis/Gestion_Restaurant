<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AdminController" spacing="10" alignment="CENTER">
    <Text text="Tableau de bord Admin" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <Label text="Créer un nouvel utilisateur" style="-fx-font-size: 18px;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Nom d'utilisateur:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="newUsernameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Mot de passe:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <PasswordField fx:id="newPasswordField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    </GridPane>

    <Button text="Créer utilisateur" onAction="#handleCreateUser"/>
</VBox>