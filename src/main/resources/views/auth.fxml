<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="controllers.AuthController"
           style="-fx-background-color: #f9f9f9;">

    <VBox alignment="TOP_CENTER" spacing="30" style="-fx-padding: 50;">

        <!-- Titre principal -->
        <Label text="Restaurant Kikongo"
               style="-fx-font-size: 30px; -fx-text-fill: red; -fx-font-weight: bold;" />

        <!-- BoÃ®te de connexion -->
        <VBox maxWidth="450" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 10, 0, 0, 4); -fx-background-radius: 4;">

            <!-- Bandeau rouge -->
            <Label text="Autentification"
                   style="-fx-background-color: red; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 15 0 15 0;"
                   maxWidth="Infinity"
                   alignment="CENTER" />

            <!-- Contenu formulaire -->
            <VBox spacing="15" alignment="CENTER" style="-fx-padding: 30;">

                <TextField fx:id="usernameField"
                           promptText="Entrer votre nom ou numero ou encore un mail"
                           style="-fx-font-size: 14px; -fx-background-radius: 10; -fx-border-radius: 10; -fx-pref-width: 300;" />

                <PasswordField fx:id="passwordField"
                               promptText="Entrer votre mot de passe"
                               style="-fx-font-size: 14px; -fx-background-radius: 10; -fx-border-radius: 10; -fx-pref-width: 300;" />

                <Button text="Se connecter"
                        onAction="#handleLogin"
                        style="-fx-background-color: transparent; -fx-text-fill: #444; -fx-font-size: 14px;"
                        alignment="CENTER_LEFT" />

                <Label fx:id="errorLabel" text=""
                       style="-fx-text-fill: red; -fx-font-size: 12px;" />
            </VBox>
        </VBox>
    </VBox>
</StackPane>
