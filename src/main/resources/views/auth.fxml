<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/20.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="controllers.AuthController"
           style="-fx-background-color: #f9f9f9;">

    <VBox alignment="CENTER" spacing="30"
          style="-fx-padding: 5% 10% 5% 10%;"> <!-- padding en % pour adaptabilité -->

        <!-- Titre principal -->
        <Label text="Restaurant Kikongo"
               style="-fx-font-size: 3em; -fx-text-fill: red; -fx-font-weight: bold;" />

        <!-- Boîte de connexion -->
        <VBox maxWidth="600"
              style="-fx-background-color: white;
                     -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 10, 0, 0, 4);
                     -fx-background-radius: 4;">

            <!-- Bandeau rouge -->
            <Label text="Authentification"
                   alignment="CENTER"
                   maxWidth="Infinity"
                   style="-fx-background-color: red;
                          -fx-text-fill: white;
                          -fx-font-size: 1.4em;
                          -fx-font-weight: bold;
                          -fx-padding: 1em 0;" />

            <!-- Contenu formulaire -->
            <VBox alignment="CENTER" spacing="15" style="-fx-padding: 30;">
                <TextField fx:id="usernameField"
                           promptText="Entrer votre nom, numéro ou mail"
                           style="-fx-font-size: 14px;
                                  -fx-background-radius: 10;
                                  -fx-border-radius: 10;
                                  -fx-pref-width: 300;" />

                <PasswordField fx:id="passwordField"
                               promptText="Entrer votre mot de passe"
                               style="-fx-font-size: 14px;
                                      -fx-background-radius: 10;
                                      -fx-border-radius: 10;
                                      -fx-pref-width: 300;" />

                <Button text="Se connecter"
                        onAction="#handleLogin"
                        alignment="CENTER_LEFT"
                        style="-fx-background-color: transparent;
                               -fx-text-fill: #444;
                               -fx-font-size: 14px;" />

                <Label fx:id="errorLabel"
                       text=""
                       style="-fx-text-fill: red; -fx-font-size: 12px;" />
            </VBox>
        </VBox>
    </VBox>
</StackPane>
