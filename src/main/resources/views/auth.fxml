<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AuthController" spacing="10" alignment="CENTER">
    <Text text="Gestion Restaurant" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    <Label text="Connexion" style="-fx-font-size: 18px;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Nom d'utilisateur:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Mot de passe:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    </GridPane>

    <Button text="Se connecter" onAction="#handleLogin" defaultButton="true"/>
</VBox>