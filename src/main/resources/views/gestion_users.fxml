<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.GestionUserController">

   <top>
      <HBox spacing="10">
         <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
         </padding>
         <Label text="Recherche :"/>
         <TextField fx:id="searchField" promptText="Rechercher un utilisateur..."
                    onKeyReleased="#filterUsers" HBox.hgrow="ALWAYS"/>
      </HBox>
   </top>

   <center>
      <SplitPane dividerPositions="0.35">
         <!-- Formulaire -->
         <VBox spacing="15" minWidth="300">
            <padding>
               <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Gestion des utilisateurs" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <GridPane hgap="10" vgap="10">
               <Label text="Nom d'utilisateur :" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
               <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

               <Label text="Mot de passe :" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
               <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

               <Label text="Administrateur :" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
               <CheckBox fx:id="isAdminCheckbox" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="10">
               <Button text="Ajouter" onAction="#addUser" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
               <Button text="Modifier" onAction="#updateUser" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
               <Button text="Supprimer" onAction="#deleteUser" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
            </HBox>
         </VBox>

         <!-- TableView -->
         <VBox spacing="10">
            <padding>
               <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <TableView fx:id="userTable" prefWidth="600" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="usernameCol" text="Nom d'utilisateur" prefWidth="200"/>
                  <TableColumn fx:id="passwordCol" text="Mot de passe" prefWidth="200"/>
                  <TableColumn fx:id="isAdminCol" text="Admin" prefWidth="100"/>
               </columns>
            </TableView>
         </VBox>
      </SplitPane>
   </center>

</BorderPane>
